<%= form_for @article, :html => {:multipart => true} do |f| %>
	<%= f.label :title %><br/>
	<%= f.text_field :title %><br/>

	<%= f.label :body %><br/>
	<%= f.text_area :body %><br/>

	<%= f.label :categories %><br/>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br/>

	<%= f.file_field :featured_image %>

	<%= f.submit %>
	<% end %>