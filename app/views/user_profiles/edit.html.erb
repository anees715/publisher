<%= form_for @userprofile do |f| %>
	<%= f.label :firstname %><br/>
	<%= f.text_field :first_name %><br/>

	<%= f.label :last_name %><br/>
	<%= f.text_field :last_name %><br/>

	<%= f.label :tagline %><br/>
	<%= f.text_field :tagline %><br/>

	<%= f.label :bio %><br/>
