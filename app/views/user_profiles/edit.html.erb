<div class="row">
	<div class="col-md-7 col-md-offset-1">
		<%= render partial: 'layouts/user_settings_menu' %>
	</div>

		<div class="col-md-6 col-md-offset-3">
			<%= form_for @userprofile, :html => {:multipart => true} do |f| %>
			<div class="form-group">
				<%= f.label :firstname %>
				<%= f.text_field :first_name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :tagline %>
				<%= f.text_field :tagline, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :bio %>
				<%= f.text_area :bio, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :facebook_id %>
				<%= f.text_field :facebook_id, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :twitter_id %>
				<%= f.text_field :twitter_id, class: "form-control" %>
			</div>

			<%= f.file_field :avatar %><br/>

			<%= f.submit "update", class: "btn btn-primary" %>
			<% end %>
		</div>
</div>