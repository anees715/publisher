<%= form_for @userprofile, :html => {:multipart => true} do |f| %>
	<%= f.label :firstname %><br/>
	<%= f.text_field :first_name %><br/>

	<%= f.label :last_name %><br/>
	<%= f.text_field :last_name %><br/>

	<%= f.label :tagline %><br/>
	<%= f.text_field :tagline %><br/>

	<%= f.label :bio %><br/>
	<%= f.text_area :bio %><br/>

	<%= f.label :facebook_id %><br/>
	<%= f.text_field :facebook_id %><br/>

	<%= f.label :twitter_id %><br/>
	<%= f.text_field :twitter_id %><br/>

	<%= f.file_field :avatar %><br/>

	<%= f.submit %>
	<% end %>